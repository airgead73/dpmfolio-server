{
  "name": "server",
  "version": "1.0.0",
  "description": "Server for dpmfolio MERN application.",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "client": "cd ../client && npm start",
    "server": "NODE_ENV=development nodemon -r dotenv/config index.js",
    "watch": "concurrently \"npm:server\" \"npm:client\"",
    "build": "cd ../client && npm run build",    
    "heroku-postbuild": "echo Skip builds on Heroku",
    "public": "mv ./build ./public",
    "clear": "rm -rf app/build"
  },
  "keywords": [
    "express",
    "auth0",
    "node"
  ],
  "author": "dan moneypenny",
  "license": "MIT",
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "express": "^4.17.3"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "dotenv": "^16.0.0",
    "nodemon": "^2.0.15"
  }
}
